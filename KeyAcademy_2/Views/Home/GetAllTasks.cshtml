@model List<KeyAcademy_2.Models.TaskDto>
@{
    ViewData["Title"] = "Tasks";
}

<br />
<br />
<br />
<div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
        <thead>
            <tr>
                <th>Task id</th>
                <th>Actions </th>
            </tr>
        </thead>
    </table>
</div>
<div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>
                        <a asp-controller="Home" asp-action="ApproveRequestHoliday" asp-route-id="@item.id" class="btn btn-success">Approve</a>
                        |
                        <a asp-controller="Home" asp-action="RejectRequestHoliday" asp-route-id="@item.id" class="btn btn-danger">Reject</a>
                    </td>
                </tr>
            }
        <tbody>
    </table>
</div>

<script>
    $(window).on("load resize ", function () {
        var scrollWidth = $('.tbl-content').width() - $('.tbl-content table').width();
        $('.tbl-header').css({ 'padding-right': scrollWidth });
    }).resize();
</script>